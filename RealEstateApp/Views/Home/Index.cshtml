@using RealEstateApp.Core.Application.ViewModels.Property;
@using RealEstateApp.Core.Application.ViewModels.PropertyType;
@model List<PropertyViewModel>
@{
    ViewData["Title"] = "Inicio";
}


<div class="container-fluid">
    <div class="row">
        @if (Model == null || Model.Count == 0)
        {
            <h2 class="text-center">No hay propiedades</h2>
        }
        else
        {
            foreach (PropertyViewModel property in Model)
            {
             
                <div class="col-4 m-2">
                    <div class="card">
                        <div class="card-header">
                            <img src="https://conceptodefinicion.de/wp-content/uploads/2014/03/arriend.jpg" class="card-img" style="width:100%;height:auto;">
                        </div>
                        <div class="card-body">
                            @if(@property.Type == null) {
                                <p>No existen tipos de propiedades creadas</p>
                              
                            }else{
                                <p>@property.Type.Name</p>
                            }
                            @if(@property.SellType == null)
                            {
                                <p>No existen tipos de ventas creadas</p>
                            }else
                            {
                                <p>@property.SellType.Id</p>
                            }
                            <p><b>Codigo: </b>@property.Code</p>
                            <p><b>Precio:</b> $@property.Price</p>
                            <p><b>Habitaciones:</b> @property.Bedrooms</p>
                            <p><b>Baños:</b> @property.Bathrooms</p>
                            <p>Tamaño en metros: @property.Size</p>
                        </div>
                        <div class="btn-group">
                           
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>