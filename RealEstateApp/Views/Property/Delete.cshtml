@using RealEstateApp.Core.Application.ViewModels.Property
@model SavePropertyViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2>¿Estás seguro que deseas borrar esta propiedad?</h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Property" asp-action="Delete">
                        <input asp-for="Id" type="hidden" />
                        <button class="btn btn-danger" type="submit">Aceptar</button>
                        <a class="btn btn-secondary" asp-controller="Agent" asp-action="Properties">Volver atrás</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>