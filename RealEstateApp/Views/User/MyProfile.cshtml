@using RealEstateApp.Core.Application.ViewModels.User
@model SaveUserViewModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h2 class="text-center">Mis datos</h2>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(false, "", new {@class = "text-danger"})
                    <form method="post" asp-controller="User" asp-action="Edit" enctype="multipart/form-data">
                        <div class="mb-2">
                            <label class="form-label" asp-for="FirstName">Nombre</label>
                            <input class="form-control" asp-for="FirstName" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label" asp-for="LastName">Apellido</label>
                            <input class="form-control" asp-for="LastName" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label" asp-for="Phone">Teléfono</label>
                            <input class="form-control" asp-for="Phone" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label" asp-for="ImageFile">Foto de usuario</label>
                            <input class="form-control" asp-for="ImageFile" />
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="ImgUrl" />
                        <input type="hidden" asp-for="UserName" />
                        <input type="hidden" asp-for="DNI" />
                        <input type="hidden" asp-for="Role" />
                        <input type="hidden" asp-for="CurrentPassword" value="null" />
                        <input type="hidden" asp-for="Password" value="null" />
                        <input type="hidden" asp-for="ConfirmPassword" value="null" />
                        <button class="btn btn-primary" type="submit">Guardar</button>
                        <a class="btn btn-secondary" asp-controller="Agent" asp-action="Index">Volver atrás</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>